<Window x:Class="BankkontoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bankkonto Anwendung" Height="300" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Kontonummer:" Grid.Row="0"/>
        <TextBox x:Name="txtKontonummer" Grid.Row="0" Margin="100,0,0,0"/>

        <TextBlock Text="Kontostand:" Grid.Row="1"/>
        <TextBlock x:Name="txtKontostand" Grid.Row="1" Margin="100,0,0,0" />

        <TextBlock Text="Betrag:" Grid.Row="2"/>
        <TextBox x:Name="txtBetrag" Grid.Row="2" Margin="100,0,0,0"/>

        <Button Content="Einzahlen" Click="Einzahlen_Click" Grid.Row="3" Margin="10,10,255,0" Grid.RowSpan="2"/>
        <Button Content="Abheben" Click="Abheben_Click" Grid.Row="3" Margin="125,10,122,0" Grid.RowSpan="2"/>
        <Button Content="Abfragen" Click="Abfragen_Click" Grid.Row="3" Margin="258,10,12,0" Grid.RowSpan="2"/>
    </Grid>
</Window>